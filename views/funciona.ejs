<!DOCTYPE html>
<html lang="es">
<%- include('./plantilla/cabecera', {tituloWeb: 'CarPop - Cómo funciona'}) %>
<body>

    <header><%- include('./plantilla/nav', {autorizado, usuarioAutentificado}); %></header>
    
    <div class="p-2 container py-5 mt-2" style="margin-bottom: 50vh !important;">
        <div class="row pt-5">
            <div class="col-10 col-lg-9 p-5 mb-2 px-md-5 mx-auto">
                <section class="py-3">
                    <div class="h3 mb-5 text-center">Como funciona</div>
                </section>
                <section class="py-3 d-flex flex-row justify-content-center">
                    <button class="btn btn-block btn-primary p-3 w-50 mx-md-3" id="b-crear">Crear un anuncio</button>
                    <button class="btn btn-block btn-primary p-3 w-50 mx-md-3" id="b-alquilar">Alquilar un vehículo</button>
                </section>
                <section class="py-3 d-flex justify-content-center d-none" id="section-crear">
                    <img src="/img/diagramas/crear.png" class="w-75 h-75">
                </section>
                <section class="py-3 d-flex justify-content-center d-none" id="section-alquilar">
                    <img src="/img/diagramas/reservar.png" class="w-75 h-75">
                </section>
            </div>
        </div>
    </div>

    <footer><%- include('./plantilla/pie'); %></footer>
    <script src="/script/ir_arriba.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script>
        document.getElementById("b-crear").addEventListener("click", ()=>{
            document.getElementById("section-crear").classList.remove("d-none");
            document.getElementById("section-alquilar").classList.add("d-none");
        })
        document.getElementById("b-alquilar").addEventListener("click", ()=>{
            document.getElementById("section-crear").classList.add("d-none");
            document.getElementById("section-alquilar").classList.remove("d-none");
        })
    </script>
</body>
</html>